# ---------------------------
# Database connection strings
# ---------------------------

# Main database connection (pooled, recommended)
POSTGRES_URL=

# For Prisma (with additional params like connect_timeout)
POSTGRES_PRISMA_URL=

# Non-pooled connection (useful for scripts, migrations, or debugging)
POSTGRES_URL_NON_POOLING=

# Parameters for constructing your own connection string
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Without SSL (not recommended, but sometimes needed locally)
POSTGRES_URL_NO_SSL=

# ---------------------------
# NextAuth configuration
# ---------------------------

# Generate with: `openssl rand -base64 32`
AUTH_SECRET=

# In production, set this to your deployed URL (optional)
# NEXTAUTH_URL=https://your-production-domain.com

# ---------------------------
# Neon (or other Postgres provider) optional variables
# ---------------------------

# If using Neon Postgres templates on Vercel
DATABASE_URL=
DATABASE_URL_UNPOOLED=
PGHOST=
PGHOST_UNPOOLED=
PGUSER=
PGDATABASE=
PGPASSWORD=

# ---------------------------
# Stack / external auth provider (if applicable)
# ---------------------------

NEXT_PUBLIC_STACK_PROJECT_ID=
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=
STACK_SECRET_SERVER_KEY=
